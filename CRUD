/*
 * Funcionalidades:
 * 1. Cadastrar peças (codigo, nome, especificação)
 * 2. Listar todas as peças em estoque
 * 3. Editar cadastros existentes
 * 4. Excluir cadastros com confirmação
 */

#include <stdio.h>  // Biblioteca padrão para entrada e saída (ex: printf, scanf)

#define MAX 10000  // Define o número máximo de cadastros permitidos

// Estrutura que representa uma peça com código, nome e especificação
struct Peça {
    int codigo;
    char nome[50];  // String de até 49 caracteres + 1 para o caractere '\0' de finalização
    int especificação;
};

// Vetor que armazena até 10000 peças
struct Pessoa pessoas[MAX];
// Variável que armazena quantas pessoas já foram cadastradas
int qtd = 0;

// Função que cadastra uma nova peça
void cadastrar() {
    // Verifica se o limite de cadastros foi atingido
    if (qtd >= MAX) {
        printf("\nLimite de pessoas atingido (%d cadastros)!\n", MAX);
        return; // Encerra a função
    }

    printf("\n--- NOVO CADASTRO ---\n");

    // Pede os dados da peça: código, nome e idade
    printf("Codigo: ");
    scanf("%d", &pessoas[qtd].codigo);
    while(getchar() != '\n'); // Limpa o "lixo" do buffer do teclado

    printf("Nome: ");
    scanf(" %49[^\n]", pessoas[qtd].nome); // Lê até 49 caracteres com espaços

    printf("Especificação: ");
    scanf("%d", &peças[qtd].especificação);

    // Aumenta o número de peças cadastradas
    qtd++;

    printf("\nCadastro realizado com sucesso!\n");
}

// Função que busca uma pessoa pelo código informado
int buscarPorCodigo(int codigo) {
    int i;
    for (i = 0; i < qtd; i++) {
        if (pessoas[i].codigo == codigo) {
            return i; // Retorna o índice da peça no vetor
        }
    }
    return -1; // Retorna -1 se não encontrou
}

// Função que edita os dados de uma peça
void editar() {
    int codigo, index;

    printf("\n--- EDITAR CADASTRO ---\n");
    printf("Digite o codigo da peça: ");
    scanf("%d", &codigo);

    // Procura a peça com o código digitado
    index = buscarPorCodigo(codigo);

    // Se não encontrar, avisa e retorna
    if (index == -1) {
        printf("\nPeça nao encontrada!\n");
        return;
    }

    // Mostra os dados atuais
    printf("\nEDITANDO CADASTRO:\n");
    printf("Codigo: %d\n", pessoas[index].codigo);
    printf("Nome atual: %s\n", pessoas[index].nome);
    printf("Especificação atual: %d\n\n", pessoas[index].idade);

    // Pede os novos dados
    printf("Novo nome: ");
    scanf(" %49[^\n]", peças[index].nome);

    printf("Nova especificação: ");
    scanf("%d", &peças[index].especificação);

    printf("\nCadastro atualizado com sucesso!\n");
}

// Função que exclui uma peça do sistema
void excluir() {
    int codigo, index;
    char confirmacao;

    printf("\n--- EXCLUIR CADASTRO ---\n");
    printf("Digite o codigo da peça: ");
    scanf("%d", &codigo);

    index = buscarPorCodigo(codigo);

    if (index == -1) {
        printf("\nPeça nao encontrada!\n");
        return;
    }

    // Mostra os dados da peça e pede confirmação
    printf("\nCONFIRMAR EXCLUSAO:\n");
    printf("Codigo: %d\n", peças[index].codigo);
    printf("Nome: %s\n", peças[index].nome);
    printf("Idade: %d\n", peças[index].idade);

    printf("\nTem certeza que deseja excluir? (s/n): ");
    scanf(" %c", &confirmacao);

    // Se confirmar, remove a peça do vetor e ajusta a quantidade
    if (confirmacao == 's' || confirmacao == 'S') {
        int i;
        for (i = index; i < qtd - 1; i++) {
            peças[i] = peças[i + 1]; // Desloca os dados para "tapar o buraco"
        }
        qtd--; // Diminui a quantidade total
        printf("\nCadastro excluido com sucesso!\n");
    } else {
        printf("\nOperacao cancelada.\n");
    }
}

// Função que lista todas as peças cadastradas
void listar() {
    printf("\n--- PEÇAS CADASTRADAS ---\n");
    printf("Total: %d\n\n", qtd);

    if (qtd == 0) {
        printf("Nenhuma peça cadastrada.\n");
        return;
    }

    // Cabeçalho da tabela
    printf("CODIGO  NOME%-42s ESPECIFICAÇÃO\n", "");
    printf("--------------------------------------------------\n");

    // Mostra os dados de cada peça
    int i;
    for (i = 0; i < qtd; i++) {
        printf("%-8d%-45s%d\n",
               peças[i].codigo,
               peças[i].nome,
               peças[i].idade);
    }
}

// Função principal (ponto de entrada do programa)
int main() {
    int op;

    printf("\n----------------------------------------");
    printf("\n    SISTEMA DE CADASTRO DE PEÇAS");
    printf("\n----------------------------------------\n");

    // Loop principal do menu
    do {
        printf("\n----------- MENU PRINCIPAL -----------\n");
        printf("1. Cadastrar nova pesça\n");
        printf("2. Listar todas as peças\n");
        printf("3. Editar cadastro existente\n");
        printf("4. Excluir cadastro\n");
        printf("0. Sair do sistema\n");
        printf("--------------------------------------\n");
        printf("Opcao: ");
        scanf("%d", &op);
        while(getchar() != '\n'); // Limpa o buffer do teclado

        // Executa a opção escolhida
        switch (op) {
            case 1: cadastrar(); break;
            case 2: listar(); break;
            case 3: editar(); break;
            case 4: excluir(); break;
            case 0: printf("\nEncerrando sistema...\n"); break;
            default: printf("\nOpcao invalida! Tente novamente.\n");
        }

    } while (op != 0); // Repete até o usuário escolher sair

    printf("\nObrigado por utilizar o sistema!\n");
    return 0; // Finaliza o programa
}
